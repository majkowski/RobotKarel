<h1>Available simulations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Computed step count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @simulations.each do |simulation| %>
  <tr>
    <td><%= simulation.name %></td>
    <td><%= simulation.simulation_steps.length %></td>
    <td><%= link_to 'Edit actors', :controller => "simulations", :action => "edit_actors", :id => simulation.id %></td>
    <td><%= link_to 'Watch', :controller => "simulations", :action => "watch", :id => simulation.id %></td>
    <td><%= link_to 'Destroy', :controller => "simulations", :action => "destroy_it", :id => simulation.id, :confirm => "Are you sure?" %></td>
  </tr>
<% end %>
</table>
