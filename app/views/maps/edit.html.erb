<%= javascript_include_tag 'map-editor' %>
<%= javascript_include_tag 'jquery-ui-1.8.10.custom.min' %>
<%= javascript_include_tag 'json2' %>
<%= javascript_include_tag 'jquery.contextmenu.r2.packed' %>

<h1>Editing map template : <%= @map.name %></h1>

<%= render 'canvas' %>

