</script>

<div class="contextMenu" id="toolSelectMenu">
      <ul>
        <li id="wall">Select brush wall</li>
        <li id="eraser">Select eraser</li>
        <li id="save">Save</li>
      </ul>
</div>

<%= link_to 'Back', maps_path %>